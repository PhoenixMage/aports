# Maintainer: Anthony Davies <anthony.t.davies@gmail.com>
pkgname=external-snapshotter
pkgver=2.0.1
pkgrel=0
pkgdesc="Sidecar container that watches Kubernetes VolumeAttachment objects"
url="https://github.com/kubernetes-csi/external-snapshotter/"
arch="x86_64 aarch64 armv7"
license="Apache-2.0"
options="!check"
makedepends="go bash" 
source="$pkgname-$pkgver.tar.gz::https://github.com/kubernetes-csi/$pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/src/github.com/kubernetes-csi/$pkgname"
subpackages="csi-snapshotter"
export GOPATH="$srcdir"


prepare() {
	mkdir -p ${builddir%/*}
	mv "$srcdir"/$pkgname-$pkgver "$builddir"/ || return 1
	cd "$builddir"
	default_prepare
}


build() {
	make
	chmod -R u+w $srcdir || return 0
}

package() {
	mkdir -p $pkgdir
}

snapshotter() {
	cd $builddir
	mkdir -p $subpkgdir/usr/bin
	cp bin/csi-snapshotter $subpkgdir/usr/bin/
}

sha512sums="93250db492d073a2a039500ec17793f58fb5442e00be72f8f1a68c05fea3bda1f4120f4b4b15fec64ae503b527f0a37f3879db389b0110326b06ccc36975ec99  external-snapshotter-2.0.1.tar.gz"
