# Maintainer: Anthony Davies <anthony.t.davies@gmail.com>
pkgname=py3-jaraco.functools
_pkgname=jaraco.functools
pkgver=3.0.0
pkgrel=0
pkgdesc="Additional functools in the spirit of stdlib's functools."
url="https://github.com/jaraco.functools-client/python/"
arch="noarch"
license="Apache-2.0"
depends="python3 py3-more-itertools py3-jaraco"
makedepends="py3-setuptools"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver
replaces="py-jaraco.functools" # Backwards compatibility
provides="py-jaraco.functools=$pkgver-r$pkgrel" # Backwards compatibility
subpackages="py3-jaraco"

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
	mv $pkgdir/usr/lib/python3.8/site-packages/jaraco/__init__.py $srcdir
	mv $pkgdir/usr/lib/python3.8/site-packages/jaraco/__pycache__/__init__.cpython-38.pyc $srcdir
}

jaraco() {
	mkdir -p $subpkgdir/usr/lib/python3.8/site-packages/jaraco/__pycache__/
  mv $srcdir/__init__.py $subpkgdir/usr/lib/python3.8/site-packages/jaraco/__init__.py
	mv $srcdir/__init__.cpython-38.pyc $subpkgdir/usr/lib/python3.8/site-packages/jaraco/__pycache__/__init__.cpython-38.pyc
}

sha512sums="f1ec725e132477f7361f7d0a77f72b69603499c24df25c9e8e0cc9a6d34a4bd4bb10fde60dc324b8176c46035e2babde04de90fcb0aa82273bc2f8559b8b31f5  jaraco.functools-3.0.0.tar.gz"
