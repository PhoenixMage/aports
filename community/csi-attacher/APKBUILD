# Maintainer: Anthony Davies <anthony.t.davies@gmail.com>
pkgname=external-attacher
pkgver=1.2.0
pkgrel=0
pkgdesc="Sidecar container that watches Kubernetes VolumeAttachment objects"
url="https://github.com/kubernetes-csi/external-attacher/"
arch="x86_64 aarch64 armv7"
license="Apache-2.0"
options="!check"
makedepends="go bash" 
source="$pkgname-$pkgver.tar.gz::https://github.com/kubernetes-csi/$pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/src/github.com/kubernetes-csi/$pkgname"
subpackages="csi-attacher"
export GOPATH="$srcdir"


prepare() {
	mkdir -p ${builddir%/*}
	mv "$srcdir"/$pkgname-$pkgver "$builddir"/ || return 1
	cd "$builddir"
	default_prepare
}


build() {
	make
}

package() {
	mkdir -p $pkgdir
}

attacher() {
	cd $builddir
	mkdir -p $subpkgdir/usr/bin
	cp bin/csi-attacher $subpkgdir/usr/bin/
}

sha512sums="7bf0b7472cbe3715ccca9d060ed907af1b63d8d79477caceca2d2ba2efd2d45423f71ee5ce77408734ed9faf0a6d37c092ec25c6f4db4282d83476e04802a8fe  external-attacher-1.2.0.tar.gz"
