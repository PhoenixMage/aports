pkgname=py3-tempora
_pkgname=tempora
pkgver=2.1.0
pkgrel=0
pkgdesc="Objects and routines pertaining to date and time"
url="https://github.com/jaraco/tempora"
arch="noarch"
license="MIT"
depends="python3 py3-jaraco.functools py3-pytz"
makedepends="py3-setuptools"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver
replaces="py-tempora" # Backwards compatibility
provides="py-tempora=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

