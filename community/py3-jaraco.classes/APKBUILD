# Maintainer: Anthony Davies <anthony.t.davies@gmail.com>
pkgname=py3-jaraco.classes
_pkgname=jaraco.classes
pkgver=3.1.0
pkgrel=0
pkgdesc="Collection objects similar to those in stdlib"
url="https://github.com/jaraco/jaraco.classes"
arch="noarch"
license="MIT"
depends="python3 py3-more-itertools py3-jaraco"
makedepends="py3-setuptools"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver
replaces="py-jaraco.classes" # Backwards compatibility
provides="py-jaraco.classes=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
	rm $pkgdir/usr/lib/python3.8/site-packages/jaraco/__init__.py
	rm $pkgdir/usr/lib/python3.8/site-packages/jaraco/__pycache__/__init__.cpython-38.pyc
}

sha512sums="697d892a01c4e8ad83f57e69dcd744f976cea67fa3efcd55b10eda02f6bf1916162c0fa952d0d711e62f62fdff62740ee55a93be9fc46ebd4ab22416092f0ff6  jaraco.classes-3.1.0.tar.gz"
