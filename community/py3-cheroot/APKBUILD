pkgname=py3-cheroot
_pkgname=cheroot
pkgver=8.2.1
pkgrel=0
pkgdesc="Cheroot is the high-performance, pure-Python HTTP server used by CherryPy."
url="https://github.com/cheroot-client/python/"
arch="noarch"
license="Apache-2.0"
depends="python3"
makedepends="py3-setuptools py3-jaraco.functools py3-more-itertools"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver
replaces="py-cheroot" # Backwards compatibility
provides="py-cheroot=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

