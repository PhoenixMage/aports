pkgname=py3-kubernetes
_pkgname=kubernetes
pkgver=10.0.1
pkgrel=0
pkgdesc="Official Python client library for kubernetes"
url="https://github.com/kubernetes-client/python/"
arch="noarch"
license="Apache-2.0"
depends="python3 py3-certifi py3-google-auth py3-dateutil py3-yaml py3-requests py3-requests-oauthlib py3-setuptools py3-six py3-urllib3 py3-websocket-client"
makedepends="py3-setuptools"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver
replaces="py-kubernetes" # Backwards compatibility
provides="py-kubernetes=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

